<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#EFF2F3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/banner"
            android:layout_width="wrap_content"
            android:layout_height="187dp"
            android:layout_marginTop="16dp"
            android:background="#EFF2F3"
            android:src="@drawable/banner"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:shapeAppearanceOverlay="@style/circular"></com.google.android.material.imageview.ShapeableImageView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardkedua"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="388dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/banner"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="117dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    android:text="Pelaksanaan PPDB Tahap 1 - 2023"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/detail"
                    app:layout_constraintHorizontal_bias="0.225"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.061" />

                <ImageView
                    android:id="@+id/detail"
                    android:layout_width="63dp"
                    android:layout_height="21dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/dc"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.06" />

                <View
                    android:id="@+id/view"
                    android:layout_width="344dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/img"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.885"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Persiapan"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.288"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="17 Mei - 05 Juni 2023"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.315"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <View
                    android:layout_width="47dp"
                    android:layout_height="43dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/img_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view" />

                <View
                    android:layout_width="48dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/img_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="242dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="168dp"
            app:cardCornerRadius="20dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardkedua"
            app:layout_constraintVertical_bias="1.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/img_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:text="Pengumuman Hasil Seleksi"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />

                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    android:layout_height="101dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#FFF2F4"
                    app:cardCornerRadius="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/anda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:text="Anda dinyatakan tidak diterima di"
                            android:textColor="#F44336"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/detailbawah"
                            android:layout_width="63dp"
                            android:layout_height="21dp"
                            android:layout_marginEnd="16dp"
                            android:src="@drawable/dc"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.06" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:text="SMA Negeri 1 Bojonggede"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/anda" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="4dp"
                            android:text="Jalur Prestasi Kejuaraan"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView4" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view3"
                    android:layout_width="41dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/img_4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:text="Layanan PPDB"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view3" />

                <TextView
                    android:id="@+id/textview6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:text="Kota Bandung"
                    android:textColor="#16A75C"
                    app:layout_constraintStart_toEndOf="@+id/view4"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/img_5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <LinearLayout
                    android:id="@+id/infosekolah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view4">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/fotogedung"
                            android:layout_width="47dp"
                            android:layout_height="47dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="23dp"
                            android:src="@drawable/gedung" />

                        <TextView
                            android:id="@+id/ppdb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="102dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="14dp"
                            android:layout_toRightOf="@id/fotogedung"
                            android:text="Info Sekolah PPDB"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/fotoarah"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="348dp"
                            android:layout_marginTop="19dp"
                            android:layout_marginRight="8dp"
                            android:layout_toRightOf="@id/ppdb"
                            android:src="@drawable/img_6" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sosialisasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/infosekolah">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/fotososialisasi"
                            android:layout_width="47dp"
                            android:layout_height="47dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="23dp"
                            android:src="@drawable/sosialiasasi" />

                        <TextView
                            android:id="@+id/textsosialisasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="102dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="14dp"
                            android:layout_toRightOf="@id/fotososialisasi"
                            android:text="Sosialisasi PPDB"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/fotoarah2"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="348dp"
                            android:layout_marginTop="19dp"
                            android:layout_marginRight="8dp"
                            android:layout_toRightOf="@id/textsosialisasi"
                            android:src="@drawable/img_6" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pendaftaran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sosialisasi">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/fotopendaftaran"
                            android:layout_width="47dp"
                            android:layout_height="47dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="23dp"
                            android:src="@drawable/pendaftaran" />

                        <TextView
                            android:id="@+id/textpendaftaran"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="102dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="14dp"
                            android:layout_toRightOf="@id/fotopendaftaran"
                            android:text="Pendaftaran PPDB Tahap 1"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/fotoarah3"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="348dp"
                            android:layout_marginTop="19dp"
                            android:layout_marginRight="8dp"
                            android:layout_toRightOf="@id/textpendaftaran"
                            android:src="@drawable/img_6" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pengumuman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pendaftaran">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/fotopengumuman"
                            android:layout_width="47dp"
                            android:layout_height="47dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="23dp"
                            android:src="@drawable/pengumuman" />

                        <TextView
                            android:id="@+id/textpengumuman"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="102dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="14dp"
                            android:layout_toRightOf="@id/fotopengumuman"
                            android:text="Pengumuman PPDB Tahap 1"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/fotoarah4"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="348dp"
                            android:layout_marginTop="19dp"
                            android:layout_marginRight="8dp"
                            android:layout_toRightOf="@id/textpengumuman"
                            android:src="@drawable/img_6" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hotline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pengumuman">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/fotohotline"
                            android:layout_width="47dp"
                            android:layout_height="47dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="23dp"
                            android:src="@drawable/hotline" />

                        <TextView
                            android:id="@+id/texthotline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="102dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="14dp"
                            android:layout_toRightOf="@id/fotohotline"
                            android:text="Hotlines"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/fotoarah5"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="348dp"
                            android:layout_marginTop="19dp"
                            android:layout_marginRight="8dp"
                            android:layout_toRightOf="@id/texthotline"
                            android:src="@drawable/img_6" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
